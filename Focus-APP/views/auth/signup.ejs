<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body>

    <% if (alerts.success) { %> <% alerts.success.forEach(msg => { %>

    <div class="alert alert-success"><%= msg %></div>
    <% }) %> <% } %> <% if (alerts.error) { %> <% alerts.error.forEach(msg => {
    %>
    <div class="alert alert-danger"><%= msg %></div>
    <% }) %> <% } %>
  
    <header>
  <nav class="navbar">
    <a href="/">Home</a>
      <% if(!currentUser) { %> 
        <a href="/about">About</a>
        <a href="/auth/login">Log In</a>
      <% } else { %> 
      <a href="/auth/logout">Logout</a>
      <a href="/profile">Profile</a>
      <% } %> 
  
  </nav>
</header>
  <div class="container">
      <form id="form-group1" action="/auth/signup" method="POST">
        <div class="form-group">
          <h2 class="text-center">Sign Up</h2>
          <label for="exampleInputEmail1" class="form-label mt-4" aria-required="true"></label>
           Name</label
          >
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
          />
          <small id="emailHelp" class="form-text text-muted"></small>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1" class="form-label mt-4"></label>
           Email address</label
          >
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
          />
          <small id="emailHelp" class="form-text text-muted"></small>
        </div>

        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input
            type="password"
            class="form-control mt-3"
            id="exampleInputPassword1"
          />
        </div>
        <div class="form-check">
        </div>
        <button type="submit" class="btn btn-primary">Sign In</button>
        <div class="register-link">
          <p>Already have an account? <a href="/auth/login">Log In</a></p>
        </div>
      </form>
    </div>
    <%- include('../layouts/footer') ; -%> <%- include('../layouts/scripts') ; -%>
  </body> 
</html>
